@model SpaceTestModel

@{
    ViewBag.Title = "Edit";
}
@{
    if (ViewBag.Error != "")
    {
        <p class="text-danger">@ViewBag.Error</p>
    }
}

<h1 style="color: dodgerblue">@ViewBag.Title</h1>

<div class="col-6">
    <form asp-action="Edit" autocomplete="off">
        <div asp-validation-summary="All" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="QuestionPart1"></label>
            <input asp-for="QuestionPart1" class="form-control" />
            <span asp-validation-for="QuestionPart1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AnswerPart1"></label>
            <input asp-for="AnswerPart1" class="form-control" />
            <span asp-validation-for="AnswerPart1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="QuestionPart2"></label>
            <input asp-for="QuestionPart2" class="form-control" />
            <span asp-validation-for="QuestionPart2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AnswerWord"></label>
            <input asp-for="AnswerWord" class="form-control" />
            <span asp-validation-for="AnswerWord" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TopicId"></label>
            <select asp-for="TopicId" class="form-control" asp-items="ViewBag.Topic"></select>
            <span asp-validation-for="TopicId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            &nbsp;&nbsp;
            <a class="btn btn-danger" href="#" onclick="deletequestiontest(@Model.Id);"><i class="fas fa-trash"></i> Delete</a>
            &nbsp;&nbsp;
            <a class="btn btn-info" asp-action="Index" asp-route-topicId="@Model.TopicId"><i class="fas fa-backward"></i> Back to List</a>
            &nbsp;&nbsp;
            <a class="btn btn-info" asp-action="Index" asp-route-topicId="@Model.TopicId"><i class="fas fa-step-backward"></i> @Model.Topic.Name</a>
        </div>
    </form>
</div>
@section Scripts {
    <link href="~/lib/AlertifyJS/css/alertify.min.css" rel="stylesheet" />
    <script src="~/lib/AlertifyJS/alertify.min.js"></script>
    <script>
        function deletequestiontest(id) {
            alertify.confirm("Warning",
                "Are you sure do you vant to delete this product?",
                function () {
                    //alertify.success("Delete Success.");
                    window.location.href = "/SpaceTest/Delete/" + id;
                },
                function () {
                    alertify.error("Delete canceled.");
                }
            );
        }
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnLanguage </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                &nbsp;&nbsp;&nbsp;&nbsp;<a asp-action="Index" asp-controller="Home" class="a-navbar"><i class="fas fa-3x fa-language"></i></a>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="list-unstyled components">
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Words"><i class="fas fa-file-word"></i> Words</a>
                    </li>
                    <li class="nav-item">
                        <a class="a-sidebar" asp-action="Index" asp-controller="Quiz"><i class="fas fa-th-list"></i> Quiz</a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="list-unstyled admin">
                        <li class="nav-item">
                            <a class="a-navbar" asp-action="Index" asp-controller="Domains"><i class="fab fa-creative-commons-pd-alt"></i> Domains</a>
                        </li>
                        <li class="nav-item">
                            <a class="a-navbar" asp-action="Index" asp-controller="Topics"><i class="fab fa-tumblr"></i> Topics</a>
                        </li>
                        <li class="nav-item">
                            <a class="a-navbar" asp-action="Quiz" asp-controller="Study"><i class="fas fa-feather-alt"></i> Quiz</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="a-navbar" asp-action="Index" asp-controller="Roles"><i class="fas fa-file-upload"></i> Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="a-navbar" asp-action="Index" asp-controller="User"><i class="fas fa-user-friends"></i> Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="a-navbar" asp-action="Index" asp-controller="UserWords"><i class="fab fa-wordpress"></i> User/Words</a>
                            </li>
                        }
                    </ul>
                }
            }
        </nav>
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="#" id="sidebarCollapse" class="a-navbar" title="Close Menu">
                            <i class="fas fa-list-alt"></i>
                            <i id="i-collapse" class="fas fa-chevron-left"></i> Menu
                            @*<i class="fas fa-align-justify"></i> Menu*@
                        </a>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-span"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="a-navbar" asp-action="Index" asp-controller="Study"><i class="fas fa-school" style="color: yellow;"></i> Study Page</a>
                            </li>
                        }
                    </ul>
                    <div class="navbar-text">
                        <ul class="navbar-nav mr-auto">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Register" asp-controller="Account"><i class="far fa-save"></i> Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Login" asp-controller="Account"><i class="fas fa-sign-in-alt"></i> Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <div class="div-navbar">
                                        <a class="s-navbar" asp-action="Details" asp-controller="Account"><i class="fas fa-user"></i> @User.Identity.Name</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="a-navbar" asp-action="Logout" asp-controller="Account"><i class="fas fa-sign-out-alt"></i> Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    <div>
        <center>
            <p style="color: blue"> Furkan DOĞAN tarafından geliştirilmiştir.</p>
        </center>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/datatables.js"></script>*@
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
    <partial name="_ValidationScriptsPartial"/>
</body>
</html>
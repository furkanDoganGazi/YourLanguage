@model TopicModel

@{
    ViewData["Title"] = "Edit Topic";
}

<h1 style="color: dodgerblue;">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-info"><i class="fas fa-backward"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>
